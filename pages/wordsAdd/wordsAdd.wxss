/* pages/wordsAdd/wordsAdd.wxss */
.animation-page{
  animation: card 1s;
}
.auto{
  padding-top: 13px;
  padding-bottom: 5px;
}
.auto .auto-box{
  color: #fff;
  background: rgba(146,182,220);
  padding: 4px;
  border-radius:4px;
}
@keyframes card{
  0%{
    transform:translateX(0); 
  }
  25%{
    transform:translateX(150px); 
  }
  50%{
    transform:translateX(400px);
    opacity: 1;
  }
  51%{
    transform:translateX(400px);
    opacity: 0;
  }
  52%{
    transform:translateX(-150px);
    opacity: 0;
  }
  53%{
    transform:translateX(-150px); 
    opacity: 1;
  }
  100%{
    transform:translateX(0); 
  }
}