    bottom: 1rem;
    right: 1rem;
    width: 120px;
    height: 50px;
    opacity: 100;
    transition: all 0.4s ease;
    z-index:1000;
}
.menu-btns-hide{
    opacity: 0;
}
.menu-btns .left-btn,.menu-btns .right-btn{
    background: rgba(146,182,220,0.7);
    width: 50px;
    height: 40px;
    padding: 0 5px;
    text-align: center;
    line-height: 40px;
}
.menu-btns .left-btn{
    position: absolute;
    left:0;
    border-radius: 20px 0 0 20px;
}

.menu-btns .right-btn{
    position: absolute;
    right:0;
    border-radius: 0 20px 20px 0;
}
